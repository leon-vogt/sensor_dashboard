<div class="intro-y col-span-12">
  <div class="intro-y box px-5 pt-5 mt-5">
    <div class="flex flex-col lg:flex-row border-b border-slate-200/60 dark:border-darkmode-400 pb-5 -mx-5">
      <div class="flex flex-1 px-5 items-center justify-center lg:justify-start">
        <div class="ml-5">
          <div class="w-24 sm:w-40 truncate sm:whitespace-normal font-medium text-lg"><%= @sensor.name %></div>
          <div class="text-slate-500"><%= @sensor.description %></div>
        </div>
      </div>
      <div class="mt-6 lg:mt-0 flex-1 px-5 border-l border-r border-slate-200/60 dark:border-darkmode-400 border-t lg:border-t-0 pt-5 lg:pt-0">
        <div class="flex flex-col justify-center items-center lg:items-start mt-4">
          <% @sensor.supported_value_types.each do |value_type| %>
            <div class="truncate sm:whitespace-normal flex items-center mt-3">
              <%= icon('fa', 'check', color: 'green', class: 'mr-2') %>
              <%= value_type.capitalize %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="mt-6 lg:mt-0 flex-1 px-5 border-t lg:border-0 border-slate-200/60 dark:border-darkmode-400 pt-5 lg:pt-0">
        <div class="flex items-center justify-center mt-2">
            <span class="ml-3 font-medium text-lg text-success"><%= @sensor.sensor_type %></span>
        </div>
      </div>
    </div>
    <div class="flex flex-row justify-between">

      <ul class="nav nav-link-tabs flex-col sm:flex-row justify-center lg:justify-start text-center" role="tablist" >
        <li id="chart-tab" class="nav-item">
          <a href="javascript:;" class="nav-link py-4 active" data-tw-target="#charts" role="tab"><%= t('.charts') %></a>
        </li>
        <li id="api-tab" class="nav-item">
          <a href="javascript:;" class="nav-link py-4" data-tw-target="#api-info" role="tab"><%= t('.api') %></a>
        </li>
      </ul>
      <div class="flex items-center">
        <%= link_to @sensor, data: { turbo: true, turbo_method: :delete, turbo_confirm: t('confirm_delete') }, class: 'btn btn-outline-secondary text-danger mr-5' do %>
          <%= t('delete') %>
        <% end %>
        <%= link_to t('edit_title', model: Sensor.model_name.human), edit_sensor_path(@sensor), class: 'btn btn-outline-secondary whitespace-nowrap' %>
      </div>
    </div>
  </div>
</div>

<div class="intro-y col-span-12 box tab-content px-5 pt-5 mt-5">
  <div id="charts" class="tab-pane active" role="tabpanel">
    <%= render 'charts', sensor: @sensor, layout: 'show' %>
  </div>

  <div id="api-info" class="tab-pane" role="tabpanel">
    <%= render 'api_info', sensor: @sensor %>
  </div>
</div>
