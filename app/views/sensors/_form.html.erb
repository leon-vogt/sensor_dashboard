<div class="col-span-12">
  <div class="intro-y box p-5">
    <%= form_with(model: sensor, local: true) do |form| %>
      <%= render partial: 'layouts/error_messages', locals: { resource: sensor } if sensor.errors.any? %>

      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>

      <div class="mt-3">
        <%= form.label :sensor_type %>
        <%= form.select :sensor_type, SensorTypes::SUPPORTED_SENSORS, {}, class: 'tom-select w-full' %>
      </div>

      <div class="mt-3">
        <%= form.label :description %>
        <%= form.text_area :description, class: 'form-control' %>
      </div>

      <div class="text-right mt-5">
        <%= form.submit t('save'), class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
