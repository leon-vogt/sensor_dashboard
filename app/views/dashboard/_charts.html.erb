<div class="col-span-12 2xl:col-span-12">
  <div class="grid grid-cols-12 gap-6">
    <% current_user.sensors.each do |sensor| %>
      <div class="col-span-12 sm:col-span-6 lg:col-span-4 mt-8">
        <div class="intro-y flex items-center h-10">
          <h2 class="text-lg font-medium truncate mr-5"><%= [sensor.device.to_s, sensor.to_s].join(' ') %></h2>
          <%= link_to t('details'), sensor.device, class: 'ml-auto text-primary truncate' %>
        </div>
        <div class="intro-y box p-5 mt-5">
          <div class="mt-3">
            <% if sensor.sensor_data.present? %>
              <div class="h-[213px]" data-controller="sensor-chart" data-sensor-id="<%= sensor.id %>" data-show-details="true">
                <canvas id="<%= "sensor-#{sensor.id}" %>" data-sensor-chart-target="canvas">
                  <p>Oops, Something went wrong here, sorry!</p>
                </canvas>
              </div>
            <% else %>
              <p class="text-center"><i><%= t('sensors.no_sensor_data') %></i></p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
